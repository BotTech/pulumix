{
  "name": "@bottech/pulumix-root",
  "private": true,
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "ajv": "^8.17.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-workspaces": "^0.11.0",
    "json-schema-to-typescript": "^15.0.4",
    "npm-check-updates": "^19.1.1",
    "prettier": "^3.6.2",
    "ts-morph": "^27.0.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "build": "tsc --build && pnpm --recursive exec tsc-alias",
    "watch": "pnpm --recursive run watch",
    "check": "pnpm --recursive run check",
    "clean": "pnpm --recursive run clean",
    "fix": "pnpm exec eslint . --ext .js,.jsx,.ts,.tsx,.html,.vue --fix",
    "link": "pnpm --recursive link && rm -rf node_modules/@pulumi",
    "lint": "pnpm exec eslint . --ext .js,.jsx,.ts,.tsx,.html,.vue",
    "test": "pnpm --recursive test",
    "upgrade": "pnpm update --latest --recursive"
  }
}
